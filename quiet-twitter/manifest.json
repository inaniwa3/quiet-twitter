{
  "manifest_version": 3,
  "name": "Quiet Twitter",
  "version": "8.0.0",
  "description": "Hide some of the information on Twitter.",
  "content_scripts": [
    {
      "matches": [ "https://twitter.com/*", "https://x.com/*" ],
      "run_at": "document_start",
      "css": [ "quiet-twitter.css" ]
    }
  ],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*"
  ]
}
